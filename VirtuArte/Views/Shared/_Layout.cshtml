<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Titles</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-md navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container justify-content-between">
                <a class="navbar-brand">
                    <img class="logo" src="~/fonts/img/logo.png" alt="Logo VirtuArte">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> -->
                <div class="offcanvas offcanvas-end" id="offcanvasNavbar">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div
                        class="offcanvas-body navbar-collapse collapse d-grid align-content-center justify-content-center justify-items-center">
                        <ul class="navbar-nav flex-grow-1 mb-2 mt-2">
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Início", "Index", new { controller = "Home" }, new {@class = "header-decoration" })
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Sobre", "About", new { controller = "Home" }, new{@class="header-decoration"})
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("Contato", "Contact", new { controller = "Home" }, new{@class="header-decoration" })
                            </li>
                        </ul>
                        <div class="button d-flex justify-content-end mb-2 mt-2">
                            <button class="bg-purple" type="button">Entrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="border-top footer pt-4 pb-4 bg-purple">
        <div class="container">
            <div>
                <img src="~/fonts/img/logo branca.png" alt="Logo VirtuArte">
            </div>

            <hr>
            <div class="d-flex justify-content-between mt-4">
                <div>
                    <ul class="navbar-nav flex-row list-style-disc nav-footer">
                        <li class="nav-item ms-3 me-3">
                            <a class="nav-link p-0">Sobre</a>
                        </li>
                        <li class="nav-item ms-3 me-3">
                            <a class="nav-link p-0">Contato</a>
                        </li>
                        <li class="nav-item ms-3 me-3">
                            <a class="nav-link p-0">Termos de
                                Uso</a>
                        </li>
                        <li class="nav-item ms-3 me-3">
                            <a class="nav-link p-0">Políticas
                                de Privacidade</a>
                        </li>
                    </ul>
                </div>
                <span class="me-3">
                    &copy; 2021 - VirtuArte
                </span>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
